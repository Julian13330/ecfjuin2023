{% extends 'base.html.twig' %}

{% block title %} Administration des plats{% endblock %}

{% block body %}
<main>
	<table class="generic-table meal-list">
                <h1>Administration des plats</h1>
                <tbody>
                {% for meal in mealMethode %}
                        <tr>
                                <td>
                                        <img class="photoPlat" src="{{ vich_uploader_asset(meal, 'imageFile') }}"alt="{{ asset(meal.title) }}">
                                </td>
                                <td>
                                        <p>{{ meal.category.title }}</p>
                                        <strong>{{ meal.title }}</strong>
                                        <p>{{ meal.description }}</p>
                                </td>
                                <td class="number"><strong>{{ meal.price | number_format(2, ',', ' ') }} â‚¬</strong>
                                </td>
                                <td>
                                <a href="/admin/plats/{{meal.id}}"><button class="btn btn-primary"> Modifier </button></a>
                                </td>
                                <td>

                                <a href="{{ path('admin_plats_delete', {id: meal.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ meal.id) }}" class="btn btn-warning">Supprimer</a>
                                </td>
                        </tr>
                        {% endfor %}
                </tbody>
        </table>
        <div class="col-12 text-center">
                <a href="/admin/plats/ajout/{{1}}"><button class="btn btn-primary"> Ajouter un plat </button></a>
        </div>
</main>
{% endblock %}