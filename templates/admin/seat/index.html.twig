{% extends "base.html.twig" %}

{% block title %}Gestion des places{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      {% include "_partials/_adminnav.html.twig" %}
        <main class="col-9 border border-light bg-white p-2">
          <div class="table-responsive">
            <h1>Gestion des places</h1>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>CAPACITE</th>
                  <th>ACTION</th>
                </tr>
              </thead>
              <tbody>
                {% for seat in seatMethode %}
                  <tr>
                    <td>{{ seat.id }}</td>
                    <td>{{ seat.nbrSeatMax}} places</td>
                    <td>
                      <a href="{{path('admin_seat_edit',{id: seat.id})}}"><button class="btn" id="myButton">Modifier</button></a>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </main>
    </div>
  </div>
{% endblock %}