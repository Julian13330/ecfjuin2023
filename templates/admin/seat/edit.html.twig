{% extends "base.html.twig" %}

{% block title %}Gestion des places{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      {% include "_partials/_adminnav.html.twig" %}
        <main class="col-9 border border-light bg-white p-2">
          <h1>Modification du nombre de place</h1>
          {{ form_start(seatForm) }}
            <div class="row">
              <div class="col-md-6">{{ form_row(seatForm.nbrSeatMax)}}</div>
              <button type="submit" class="btn" id="myButton">{{ button_label|default('Modifier') }}</button>
            </div>
          {{ form_end(seatForm) }}
        </main>
    </div>
  </div>
{% endblock %}