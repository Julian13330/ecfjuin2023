{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    
    <main class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>
                {{ form_start(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend>Mon identité</legend>
                        {{ form_row(registrationForm.username) }}
                        {{ form_row(registrationForm.lastname) }}
                        {{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.email) }}
                        <legend>Mes préférences</legend>
                        {{ form_row(registrationForm.allergie) }}
                        {{ form_row(registrationForm.userguest) }}
                    </fieldset>
                        <legend>Sécurité</legend>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}
                    <button type="submit" class="btn btn-primary btn-lg my-3">M'inscire</button>
                    <a href="{{ path('app_login') }}" class="btn btn-secondary">Me connecter</a>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </main>
    
{% endblock %}
