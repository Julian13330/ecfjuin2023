{% extends 'base.html.twig' %}
{% block body %}
<main class="mb-3">
                
	<div class="container d-flex flex-column justify-content-center align-items-center mb-4">
                {% if is_granted('ROLE_ADMIN') %}
                <div class="d-flex justify-content-center flex-column text-center pt-5 py-5">
                    <a href={{path('admin_index')}}><button class="btn btn-dark mb-3">Accès à votre espace d'administration </button></a>
                </div>
                {% else %}
                    <h1>Nous vous souhaitons la bienvenue dans notre univers gastronomique !</h1>
				{% endif %}
		 <div class="gallerie">
            {% for meal in mealMethode %}
                {% if meal.favoris == true %}
                    <div class="photo-item m-2">
                        <img class="image" src="{{ vich_uploader_asset(meal, 'imageFile') }}" alt="{{ asset(meal.title) }}">
                        <div class="middle">
                            <h3 class="text">{{ meal.title }}</h3>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
      </div>
	</div>
    <div class="row text-center mb-3">
        <a href={{path('app_reservation')}}><button type="button" class="btn" id="myButton"><i class="bi bi-book"></i>
            Réserver une table</button></a>
    </div>
    <div class="parallax row row-cols-1">
        <div class="d-flex justify-content-center flex-column text-center" id="effetParallax">
            <h2 class="justify-content-center phrase">"Découvrez un lieu unique, notre personnel vous accueille avec le sourire et la bonne humeur pour vous offrir un moment de détente"</h2>
        </div>
    </div>
</main>		
{% endblock %}


