{% extends 'base.html.twig' %}

{% block title %} Mon compte {% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
        <main class="col-12 border border-light bg-white p-2 py-5 pt-5">
          <h1>Mon compte</h1>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>PSEUDO</th>
                <th>NOM</th>
                <th>PRENOM</th>
                <th>ALLERGIE</th>
                <th>INVITES</th>
                <th>EMAIL</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                  <td>{{ app.user.username }}</td>
                  <td>{{ app.user.lastname }}</td>
                  <td>{{ app.user.firstname }}</td>
                  <td>{{ app.user.allergie }}</td>
                  <td>{{ app.user.userGuest }}</td>
                  <td>{{ app.user.email }}</td>
                </tr>
            </tbody>
          </table>
        </main>
    </div>
  </div>
{% endblock %}